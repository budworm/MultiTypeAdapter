<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.senierr.rvadapter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NormalActivity" />
        <activity android:name=".EmptyAndErrorActivity" />
        <activity android:name=".HeaderFooterActivity" />
        <activity android:name=".ItemClickActivity" />
        <activity android:name=".LoadMoreActivity" />
        <activity android:name=".SelectionActivity" />

    </application>

</manifest>